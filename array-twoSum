class Solution {
    boolean twoSum(int arr[], int target) {
        // code here
        Arrays.sort(arr);
        int n = arr.length;
        int left = 0 ; 
        int right = n-1;
        while(left < right){
            int tar = arr[left]+arr[right];
            if(tar == target){
                return true;
            }
            else if(tar > target){
                right--;
                
            }else{
                left++;
            }
        }
        return false;
    }
}
