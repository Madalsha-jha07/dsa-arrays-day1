// // User function Template for Java

class Solution {
    public void rotate(int[] arr) {
        int n = arr.length;
        // code here
        for(int i = 0 , j = n-2 ; i < j ; i++ ,j--){
            int temp = arr[j];
            arr[j] = arr[i];
            arr[i] = temp;
        }
        for(int i = 0 , j = n-1 ; i < j ; i++,j--){
            int temp = arr[j];
            arr[j] = arr[i];
            arr[i] = temp;
        }
    }
}
